<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/gridview_checkin_background"
	>
	<ImageView android:id="@+id/movie_poster"
		android:layout_width="100dp" android:layout_height="140dp"
		android:layout_gravity="center"
		android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
		android:padding="2dp" 
		android:src="@drawable/stub" 
        android:background="@color/white1"></ImageView>
	<ImageView android:id="@+id/imageview_like_bg"
        android:layout_width="40dp" android:layout_height="20dp"
        android:layout_alignRight="@+id/movie_poster"
        android:layout_alignBottom="@+id/movie_poster"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:alpha="0.9"
        android:src="@drawable/like_bg"
        ></ImageView>
	<ImageView android:id="@+id/imageview_like"
         android:layout_width="15dp" android:layout_height="15dp"
         android:layout_alignLeft="@+id/imageview_like_bg"
         android:layout_alignBottom="@+id/imageview_like_bg"
         android:layout_marginLeft="2dp"
         android:layout_marginBottom="2.5dp"
         android:layout_gravity="center"
         android:src="@drawable/facebook_like_grey"
         ></ImageView>
	<TextView android:id="@+id/textview_like"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageview_like"
        android:layout_alignBottom="@+id/imageview_like_bg"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1.5dp"
        android:gravity="center"
		android:textColor="@color/background_deep"
		android:textStyle="bold"
		android:textSize="15dp"
        android:text="0"
        android:lines="1" />
	
    <TextView android:text="電影名稱"
           android:id="@+id/movie_name" android:textColor="#2a2a2a"
           android:layout_width="wrap_content" android:layout_height="wrap_content"
           android:layout_below="@+id/movie_poster"
           android:padding="1dp"
           android:layout_centerHorizontal="true"
           android:textSize="15dp"
           android:lines="2"></TextView> 
        
	
</RelativeLayout>