<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/gallery_background"
	>
	<ImageView android:id="@+id/movie_poster"
		android:layout_width="75dp" android:layout_height="106dp"
		android:layout_alignTop="@+id/movie_video"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="2dp"
		android:src="@drawable/stub" 
        android:background="@color/white1" />
   <TextView android:text="電影名稱"
		android:id="@+id/movie_name" android:textColor="#2a2a2a"
		android:layout_width="75dp" android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/movie_poster"
		android:layout_below="@+id/movie_poster"
		android:layout_marginTop="3dp"
		android:textSize="12dp"
		android:maxLines="2" />
   <ImageView 
       android:id="@+id/movie_video"
       android:layout_width="188dp" android:layout_height="135dp"
       android:layout_alignParentTop="true"
       android:layout_toRightOf="@+id/movie_poster"
       android:layout_marginLeft="2dp"
       android:src="@drawable/stub" />
   <ImageView 
       android:id="@+id/movie_play"
       android:layout_width="40dp" android:layout_height="40dp"
       android:layout_marginLeft="220dp"
       android:layout_marginTop="90dp"
       android:src="@drawable/play_select"
       android:clickable="true" />

</RelativeLayout>