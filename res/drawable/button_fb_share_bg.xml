<?xml version="1.0" encoding="UTF-8"?> 
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" >  
        <shape>  
            <stroke  android:width="0.8dp" 
                android:color="@color/background" />
            <solid android:color="#bfbfbf"/> 
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="5dp"  
                android:top="1dp"  
                android:right="5dp"  
                android:bottom="1dp" /> 
        </shape>
    </item>  
    <item android:state_focused="true" >  
        <shape>   
            <stroke  
                android:width="0.8dp"  
                android:color="#dfdfdf" />
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="5dp"  
                android:top="1dp"  
                android:right="5dp"  
                android:bottom="1dp" />   
        </shape>
    </item>  
    <item >        
        <shape>
            <stroke  android:width="0.8dp" 
                android:color="#bfbfbf" />
            <solid android:color="@color/background"/>
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="5dp"  
                android:top="1dp"  
                android:right="5dp"  
                android:bottom="1dp" />
        </shape>  
    </item>  
</selector>  