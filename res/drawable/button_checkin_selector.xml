<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" > <!-- pressed -->
        <shape>
            <gradient
                android:startColor="@color/checkin_dark"
                android:endColor="@color/checkin_dark"
                android:angle="270" />
            <corners  
                android:radius="2dp" />
            
            <stroke  
                android:width="2dp"  
                android:color="@color/checkin_dark" />
            
            <size android:height="45dp" />
            
        </shape>
    </item > 
    
    <item android:state_focused="true"> <!-- focused --> 
        <shape>
            <gradient
                android:startColor="@color/checkin_dark"
                android:endColor="@color/checkin_dark"
                android:angle="270" />
            <corners  
                android:radius="2dp" />
            <stroke  
                android:width="2dp"  
                android:color="@color/checkin_dark" />
            
            <size android:height="45dp" />
        </shape>
    </item>
        
    <item> <!-- default -->
        <shape>
            <gradient
                android:startColor="@color/checkin_light"
                android:endColor="@color/checkin_dark"
                android:angle="270" />
            <corners  
                android:radius="2dp" />
            <stroke  
                android:width="2dp"  
                android:color="@color/checkin_dark" />
            
            <size android:height="45dp" />
        </shape>
    </item>
</selector>

