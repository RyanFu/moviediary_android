<?xml version="1.0" encoding="UTF-8"?> 
<selector  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" >  
        <shape>  
            <solid android:color="#bfbfbf"/> 
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="15dp"  
                android:top="5dp"  
                android:right="15dp"  
                android:bottom="5dp" /> 
        </shape>  
    </item>  
    <item android:state_focused="true" >  
        <shape>   
            <stroke  
                android:width="2dp"  
                android:color="#dfdfdf" />
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="15dp"  
                android:top="5dp"  
                android:right="15dp"  
                android:bottom="5dp" />   
        </shape>  
    </item>  
    <item>        
        <shape>  
            <solid android:color="@color/background"/>
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="15dp"  
                android:top="5dp"  
                android:right="15dp"  
                android:bottom="5dp" />    
        </shape>  
    </item>  
</selector> 