<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" > <!-- pressed -->
        <shape>
            <gradient
                android:startColor="@color/button_check_deep"
                android:endColor="@color/button_check_light"
                android:angle="270" />
            <corners  
                android:radius="2dp" />
            
            <stroke  
                android:width="2dp"  
                android:color="#550000" />
            
            <size android:height="35dp" />
            
        </shape>
    </item > 
    
    <item android:state_focused="true"> <!-- focused --> 
        <shape>
            <gradient
                android:startColor="@color/button_check_light"
                android:endColor="@color/button_check_deep"
                android:angle="270" />
            <corners  
                android:radius="4dp" />
            <stroke  
                android:width="2dp"  
                android:color="#550000" />
            
            <size android:height="35dp" />
        </shape>
    </item>
        
    <item> <!-- default -->
        <shape>
            <gradient
                android:startColor="@color/button_check_light"
                android:endColor="@color/button_check_deep"
                android:angle="270" />
            <corners  
                android:radius="4dp" />
            <stroke  
                android:width="2dp"  
                android:color="#550000" />
            
            <size android:height="35dp" />
        </shape>
    </item>
</selector>